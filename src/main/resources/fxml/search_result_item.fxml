<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane id="SearchFieldItemUI" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="digitalbedrock.software.pbcore.controllers.SearchResultItemController">
    <stylesheets>
        <URL value="@../styles/style.css" />
    </stylesheets>
    <GridPane vgap="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <HBox>
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
            <children>
                <Label styleClass="resultFieldLabel" text="Title: " />
                <Label fx:id="lblTitle" styleClass="resultTitle" text="Label" />
            </children>
        </HBox>
        <HBox GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
            <children>
                <Label styleClass="resultFieldLabel" text="File: " />
                <Label fx:id="lblFilepath" text="Label" />
            </children>
        </HBox>
        <Label fx:id="lblElementType" styleClass="resultFieldLabel" text="Label" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
        </Label>
        <padding>
            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
        </padding>
    </GridPane>
</AnchorPane>
